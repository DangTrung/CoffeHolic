<!DOCTYPE html>
<html>
  <head>
    <title>Admin Page</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "sb-admin-2.min", media: 'all', 'data-turbolinks-track' => true  %>
     <%= stylesheet_link_tag "select2", media: 'all', 'data-turbolinks-track' => true  %>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <%= favicon_link_tag asset_path('white-logo.png') %>
    
  </head>

  <body id="page-top">
  	<div id="wrapper">
      <%= render 'layouts/admin/bar'%>
      <div id="content-wrapper" class="d-flex flex-column">
	      <div id="content">
		      <%= render 'layouts/admin/header'%>
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>">
              <%= message %>
            </div>
          <% end %>
		      <%= yield %>
	      </div>
      	  <%= render 'layouts/admin/footer'%>
      </div>
	</div>
	<%= javascript_pack_tag 'dashboard', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
