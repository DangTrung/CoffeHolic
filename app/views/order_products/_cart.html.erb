<div class="container Banner">
    <div class="row">
        <div class="col-12 p-0">
            <div class="img d-flex justify-content-center align-items-center">
                <h1 class="font-weight-bold pt-5 pb-3 text-only font-lg pointer animate__animated animate__fadeInDown">
                    GIỎ HÀNG
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="container Content">
    <div class="row mb-5">
        <div class="col-12 animate__animated animate__fadeInLeft">
            <table class="table table-bordered">
                <thead class="thead-dark text-only text-center">
                    <tr>
                        <th scope="col">HÀNH ĐỘNG</th>
                        <th scope="col">SẢN PHẨM</th>
                        <th scope="col">GIÁ</th>
                        <th scope="col">SỐ LƯỢNG</th>
                        <th scope="col">THÀNH TIỀN</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                <%@order_products.includes(:product).each do |i|%>
                    <tr>

                        <th>
                            <a class="text-danger text-decoration-none" href="#">
                                <i class="fas fa-times-circle"></i>
                            </a>
                        </th>
                        <td>
                            <div class="product d-flex">
                                <div class="img Content_row_col-12_table_product_img">
                                    <%= image_tag 'roastery', class:"pic Content_row_col-12_table_product_img_pic"%>
                                </div>
                                <div class="info Content_row_col-12_table_product_info">
                                    <a class="m-0 text-decoration-none"
                                        href="#">
                                        <h6 class="text-lightpurple font-weight-bold text-uppercase"><%=i.product.name%>
                                        </h6>
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td class="text-success font-weight-bold">
                            <h5>
                                <span
                                    class="text-success font-weight-bold"></span>
                    
                                <span class="text-success font-weight-bold"></span>
                                
                            </h5>
                        </td>
                        <td>

                            <%= form_with model: OrderProduct.new, remote: true,  :class => "d-flex justify-content-center align-items-center" do |f|%>
                                <%= f.hidden_field :product_id, value: i.product_id %>
                                <%= f.number_field :quantity, value: i.quantity, :class => "text-only text-center font-weight-bold py-1"%>
                                <%= f.button :submit , :class => "btn btn-lightpurple rounded-0 font-weight-bold ml-1 animate__animated animate__fadeInRight" do %>
                                    <i class='fas fa-check'></i>
                                <% end %>
                            <% end %>

                        </td>
                        <td class="text-success font-weight-bold">
                            <h5>
                               
                                <span
                                    class="text-success font-weight-bold"></span>
                               
                                <div class="d-flex justify-content-center">
                                    <span class="text-success font-weight-bold"><%= number_with_delimiter(price(i))%></span>
                                </div>
                                
                            </h5>
                        </td>
                    </tr>
                <%end%>  
                </tbody>
            </table>
            <hr class="border">
        </div>

        <div class="col-12 text-right justify-content-between d-flex justify-content-between ml-3">

            <a class="btn btn-secondary mr-3 rounded-0 font-weight-bold animate__animated animate__fadeInLeft"
                href="<%= products_path %>">
                TIẾP TỤC MUA SẮM
            </a>
        </div>
    </div>
</div>